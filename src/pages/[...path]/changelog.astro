---
import Prose from "@/components/Content/Prose.astro";
import SidebarPage from "@/layouts/SidebarPage.astro";
import { getStaticPathsByLocales } from "@/util/path";
import { getEntry } from "astro:content";

export function getStaticPaths() {
    return getStaticPathsByLocales();
}

const { lang } = Astro.props;
const entry = await getEntry("misc", `en/changelog`);
if (!entry) return;
const { Content } = await entry.render();
---

<SidebarPage
    lang={lang}
    sidebarMode="guides"
    meta={{
        title: "KAPLAY, Changelog",
        description:
            "The changelog for KAPLAY, a game library for JavaScript.",
        keywords: "kaplay, kaboom, game, library, javascript, easy, simple",
    }}
>
    <Prose>
        <Content />
    </Prose>
</SidebarPage>
