---
import yourGameImage from "@/assets/yourgame.webp";
import FriendsBelow from "@/components/Util/FriendsBelow.astro";
import { Image } from "astro:assets";
import { Code } from "astro:components";
import exampleCode from "../../util/code.js?raw";
---

<div
    class="w-full min-h-screen flex flex-col lg:flex-row items-center justify-center gap-6 p-4"
    id="example"
>
    <div class="max-w-xl w-full">
        <h2 class="text-3xl font-semibold">
            Make a platformer in no time!
        </h2>
        <p>
            One of the reasons why KAPLAY is so fun is because it's easy to
            understand and the API is made to be friendly.
        </p>

        <FriendsBelow friends={["ghosty"]}>
            <Code
                code={exampleCode}
                lang="javascript"
                class="text-sm w-full max-w-xl"
            />
        </FriendsBelow>
    </div>

    <FriendsBelow friends={["gigagantrum"]}>
        <Image
            class="w-full h-full max-w-xl lg:"
            src={yourGameImage}
            alt="Your game"
            height={200}
            width={500}
        />
    </FriendsBelow>
</div>
